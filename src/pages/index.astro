---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts[0];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				display: grid;
				gap: 1.75rem;
				grid-template-columns: 1.25fr 0.75fr;
				align-items: center;
				margin-bottom: 2rem;
			}
			.hero-card {
				background: linear-gradient(135deg, rgba(var(--border), 0.25), transparent);
				border-radius: 18px;
				padding: 1.5rem;
				box-shadow: var(--box-shadow);
				border: 1px solid rgba(var(--border), 0.7);
			}
			.hero h1 {
				font-size: clamp(2.2rem, 3.5vw, 3rem);
				margin-bottom: 0.5rem;
			}
			.hero p {
				margin-bottom: 1rem;
			}
			.meta {
				color: rgb(var(--text-muted));
				font-size: 0.95rem;
			}
			.badges {
				display: flex;
				gap: 0.75rem;
				flex-wrap: wrap;
			}
			.badge {
				font-size: 0.85rem;
				padding: 0.35rem 0.75rem;
				border-radius: 999px;
				background: rgba(var(--border), 0.6);
				color: rgb(var(--text));
			}
			.cta {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.6rem 1.1rem;
				border-radius: 10px;
				background: var(--accent);
				color: white;
				text-decoration: none;
				font-weight: 700;
			}
			.cta.secondary {
				background: transparent;
				color: var(--accent);
				border: 2px solid var(--accent);
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1.25rem;
			}
			.card {
				background: var(--surface);
				border-radius: 14px;
				padding: 1.25rem;
				border: 1px solid rgba(var(--border), 0.7);
			}
			.card h3 {
				margin-bottom: 0.5rem;
			}
			.section {
				margin: 2.5rem 0;
			}
			.kpi-row {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1rem;
			}
			.kpi {
				background: rgba(var(--border), 0.35);
				border: 1px solid rgba(var(--border), 0.6);
				border-radius: 12px;
				padding: 1rem;
			}
			.kpi p {
				margin: 0.35rem 0 0;
				color: rgb(var(--text-muted));
			}
			.table {
				width: 100%;
				border-collapse: collapse;
			}
			.table th,
			.table td {
				padding: 0.6rem 0.75rem;
				border-bottom: 1px solid rgba(var(--border), 0.4);
				text-align: left;
			}
			.table th {
				color: rgb(var(--text-muted));
				font-weight: 600;
			}
			@media (max-width: 960px) {
				.hero {
					grid-template-columns: 1fr;
				}
				.grid,
				.kpi-row {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div>
					<h1>Know which model wins today.</h1>
					<p>
						AI Model Benchmarks publishes impartial scorecards across real‑world tasks —
						performance, cost, and latency in one place.
					</p>
					<p class="meta">Updated daily at 6am ET · <strong>4 models</strong> tested</p>
					<div class="badges">
						<span class="badge">Daily scorecards</span>
						<span class="badge">Transparent rubrics</span>
						<span class="badge">Cost + latency tracked</span>
					</div>
					<div style="margin-top: 1.25rem; display: flex; gap: 0.75rem; flex-wrap: wrap;">
						<a class="cta" href="/scorecards">View today’s scorecard</a>
						<a class="cta secondary" href="/about">Methodology</a>
					</div>
				</div>
				{latest && (
					<div class="hero-card">
						<h3>Today’s scorecard</h3>
						<a href={`/blog/${latest.id}/`}>
							{latest.data.heroImage && (
								<Image width={720} height={360} src={latest.data.heroImage} alt="" />
							)}
							<h4 style="margin: 0.5rem 0 0.25rem 0;">{latest.data.title}</h4>
							<p class="meta">
								<FormattedDate date={latest.data.pubDate} />
							</p>
						</a>
						<hr />
						<h3>Why it matters</h3>
						<p>
							Most benchmarks ignore workflows. We test models the way real engineers do.
						</p>
					</div>
				)}
			</section>

			<section class="kpi-row">
				<div class="kpi">
					<strong>Daily ranking</strong>
					<p>See who wins when the task is real, not synthetic.</p>
				</div>
				<div class="kpi">
					<strong>Transparent evals</strong>
					<p>Prompts and grading rubrics are public and reproducible.</p>
				</div>
				<div class="kpi">
					<strong>Cost & latency</strong>
					<p>Track spend and speed, not just accuracy.</p>
				</div>
			</section>

			<section class="section">
				<h2>What you get</h2>
				<div class="grid">
					<div class="card">
						<h3>Daily scorecards</h3>
						<p>Scan results in 60 seconds and ship the right model this week.</p>
					</div>
					<div class="card">
						<h3>Failure cases</h3>
						<p>We include the miss and the fix so you can audit risk fast.</p>
					</div>
					<div class="card">
						<h3>Operator takeaways</h3>
						<p>Clear recommendations based on how teams actually build.</p>
					</div>
				</div>
			</section>

			<section class="section">
				<h2>Scorecard fields (what we track)</h2>
				<table class="table">
					<thead>
						<tr>
							<th>Category</th>
							<th>Fields</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Performance</td>
							<td>Task score, error rate, rubric compliance</td>
						</tr>
						<tr>
							<td>Cost</td>
							<td>Tokens, estimated spend, cost per task</td>
						</tr>
						<tr>
							<td>Latency</td>
							<td>P50/P95 response time, time‑to‑first‑token</td>
						</tr>
						<tr>
							<td>Reliability</td>
							<td>Failure cases, guardrail misses, audit notes</td>
						</tr>
					</tbody>
				</table>
			</section>

			<section class="section hero-card">
				<h2>Get today’s winner</h2>
				<p>Start with the daily scorecard, then drill into task‑level breakdowns.</p>
				<a class="cta" href="/scorecards">Go to scorecards</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
