---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
// Exclude templates from public lists
const posts = allPosts.filter(p => !p.id.includes('template'));
const latest = posts[0];
const recent = posts.slice(0, 6);

const models = [
	{ name: 'Claude Opus 4.6', total: 9.4, color: 'var(--claude)' },
	{ name: '5.3-Codex-Spark', total: 9.2, color: 'var(--openai)' },
	{ name: 'Kimi K2.5', total: 8.9, color: '#e040fb' },
	{ name: 'MiniMax M2.5', total: 8.7, color: '#00bcd4' },
	{ name: 'GLM-5', total: 8.5, color: 'var(--google)' },
	{ name: 'Gemini 2.5 Pro', total: 8.4, color: '#4285f4' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} — Daily AI Model Benchmarks & Scorecards`} description={SITE_DESCRIPTION} />
		<style>
			/* Override main for homepage — full-width sections */
			main {
				width: 100%;
				max-width: 100%;
				padding: 0;
			}

			/* Shared container */
			.container {
				max-width: var(--container-xl);
				margin: 0 auto;
				padding: 0 1.5rem;
			}

			/* ===== HERO ===== */
			.hero-section {
				position: relative;
				padding: var(--space-4xl) 0 var(--space-3xl);
				overflow: hidden;
			}
			.hero-bg {
				position: absolute;
				inset: 0;
				background: var(--gradient-hero);
				pointer-events: none;
			}
			.hero-mesh {
				position: absolute;
				inset: 0;
				background: var(--gradient-mesh);
				opacity: 0.6;
				pointer-events: none;
			}
			.hero-grid-lines {
				position: absolute;
				inset: 0;
				background-image:
					linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
					linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
				background-size: 60px 60px;
				pointer-events: none;
			}
			.hero-content {
				position: relative;
				display: grid;
				grid-template-columns: 1.1fr 0.9fr;
				gap: var(--space-3xl);
				align-items: center;
			}
			.hero-text {
				opacity: 0;
				animation: fadeInUp 0.7s ease-out 0.1s forwards;
			}
			.hero-eyebrow {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: var(--font-xs);
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				color: var(--accent-light);
				margin-bottom: var(--space-md);
				padding: 0.35rem 0.85rem;
				background: rgba(99, 102, 241, 0.1);
				border: 1px solid var(--border-accent);
				border-radius: var(--radius-full);
			}
			.hero-eyebrow .dot {
				width: 6px;
				height: 6px;
				border-radius: 50%;
				background: var(--success);
				animation: pulse 2s ease-in-out infinite;
			}
			.hero-title {
				font-size: clamp(2.5rem, 4.5vw, 3.75rem);
				line-height: 1.08;
				margin-bottom: var(--space-lg);
				letter-spacing: -0.035em;
				background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.7) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.hero-desc {
				font-size: var(--font-lg);
				color: var(--text-secondary);
				line-height: 1.7;
				max-width: 520px;
				margin-bottom: var(--space-xl);
			}
			.hero-badges {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin-bottom: var(--space-xl);
			}
			.hero-badges .badge {
				white-space: nowrap;
			}
			.hero-actions {
				display: flex;
				gap: 0.75rem;
				flex-wrap: wrap;
			}

			/* Buttons */
			.btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
				min-height: 44px;
				padding: 0.7rem 1.4rem;
				border-radius: var(--radius-md);
				font-weight: 600;
				font-size: var(--font-sm);
				text-decoration: none;
				transition: all var(--transition-fast);
				cursor: pointer;
				border: none;
			}
			.btn-primary {
				background: var(--gradient-primary);
				color: white;
				box-shadow: 0 0 24px rgba(99, 102, 241, 0.3);
			}
			.btn-primary:hover {
				transform: translateY(-2px);
				box-shadow: 0 0 36px rgba(99, 102, 241, 0.5);
				color: white;
			}
			.btn-secondary {
				background: var(--bg-tertiary);
				color: var(--text-primary);
				border: 1px solid var(--border-primary);
			}
			.btn-secondary:hover {
				background: var(--bg-elevated);
				border-color: var(--border-accent);
				color: var(--text-primary);
			}
			.btn-arrow {
				transition: transform var(--transition-fast);
			}
			.btn:hover .btn-arrow {
				transform: translateX(3px);
			}

			/* ===== LEADERBOARD CARD ===== */
			.hero-visual {
				opacity: 0;
				animation: fadeInUp 0.7s ease-out 0.3s forwards;
			}
			.leaderboard-card {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-xl);
				padding: var(--space-lg);
				box-shadow: var(--shadow-lg), var(--shadow-glow);
				position: relative;
				overflow: hidden;
			}
			.model-row {
				display: grid;
				grid-template-columns: auto 1fr auto;
				gap: var(--space-md);
				align-items: center;
				padding: 0.65rem 0;
				border-bottom: 1px solid var(--border-secondary);
				min-width: 0;
			}
			.model-row:last-of-type {
				border-bottom: none;
			}
			.model-name {
				font-weight: 600;
				font-size: var(--font-sm);
				color: var(--text-primary);
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			.leaderboard-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 2px;
				background: var(--gradient-primary);
				opacity: 0.6;
			}
			.leaderboard-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: var(--space-md);
			}
			.leaderboard-header h3 {
				font-size: var(--font-base);
				color: var(--text-primary);
				margin: 0;
			}
			.leaderboard-header span {
				font-size: var(--font-xs);
				color: var(--text-tertiary);
			}
			.model-rank {
				width: 28px;
				height: 28px;
				display: flex;
				align-items: center;
				justify-content: center;
				border-radius: var(--radius-sm);
				font-size: var(--font-xs);
				font-weight: 700;
				background: var(--bg-tertiary);
				color: var(--text-secondary);
			}
			.model-rank.gold {
				background: rgba(245, 158, 11, 0.15);
				color: var(--warning);
			}
			.model-info {
				display: flex;
				flex-direction: column;
				gap: 0.15rem;
			}
			.model-name {
				font-weight: 600;
				font-size: var(--font-sm);
				color: var(--text-primary);
			}
			.model-bar-container {
				height: 6px;
				background: var(--bg-tertiary);
				border-radius: 3px;
				overflow: hidden;
				margin-top: 0.2rem;
			}
			.model-bar {
				height: 100%;
				border-radius: 3px;
				transition: width 1s ease-out;
			}
			.model-score {
				font-size: var(--font-lg);
				font-weight: 700;
				color: var(--text-primary);
			}
			.leaderboard-footer {
				margin-top: var(--space-md);
				padding-top: var(--space-sm);
				border-top: 1px solid var(--border-secondary);
				display: flex;
				justify-content: space-between;
				align-items: center;
			}
			.leaderboard-footer a {
				font-size: var(--font-xs);
				color: var(--accent-light);
			}
			.leaderboard-footer span {
				font-size: var(--font-xs);
				color: var(--text-tertiary);
			}

			/* ===== STATS STRIP ===== */
			.stats-strip {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: var(--space-md);
				padding-top: var(--space-2xl);
				padding-bottom: var(--space-2xl);
			}
			.stat-card {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-lg);
				padding: var(--space-lg);
				text-align: center;
				transition: all var(--transition-base);
			}
			.stat-card:hover {
				border-color: var(--border-accent);
				transform: translateY(-2px);
			}
			.stat-number {
				font-size: var(--font-3xl);
				font-weight: 700;
				background: var(--gradient-primary);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				line-height: 1;
				margin-bottom: 0.35rem;
			}
			.stat-label {
				font-size: var(--font-sm);
				color: var(--text-tertiary);
			}

			/* ===== SECTIONS ===== */
			.section {
				padding: var(--space-3xl) 0;
			}
			.section-header {
				margin-bottom: var(--space-xl);
			}
			.section-header h2 {
				margin-bottom: 0.35rem;
			}
			.section-header p {
				color: var(--text-tertiary);
				font-size: var(--font-base);
			}

			/* ===== POST GRID ===== */
			.post-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: var(--space-lg);
			}
			.post-card {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-lg);
				overflow: hidden;
				text-decoration: none;
				color: inherit;
				transition: all var(--transition-base);
				display: flex;
				flex-direction: column;
			}
			.post-card:hover {
				border-color: var(--border-accent);
				transform: translateY(-4px);
				box-shadow: var(--shadow-lg);
			}
			.post-card:hover .post-card-title {
				color: var(--accent-light);
			}
			.post-card-image {
				aspect-ratio: 16/9;
				overflow: hidden;
			}
			.post-card-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 0;
				transition: transform var(--transition-slow);
			}
			.post-card:hover .post-card-image img {
				transform: scale(1.05);
			}
			.post-card-body {
				padding: var(--space-lg);
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			.post-card-date {
				font-size: var(--font-xs);
				color: var(--text-tertiary);
				margin-bottom: 0.35rem;
			}
			.post-card-title {
				font-size: var(--font-base);
				font-weight: 600;
				color: var(--text-primary);
				line-height: 1.35;
				margin: 0;
				transition: color var(--transition-fast);
			}

			/* ===== TRUST GRID ===== */
			.trust-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: var(--space-lg);
			}
			/* How It Works - 4 columns on desktop */
			.trust-grid.how-it-works {
				grid-template-columns: repeat(4, 1fr);
			}
			.trust-card {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-lg);
				padding: var(--space-xl);
				transition: all var(--transition-base);
				position: relative;
				overflow: hidden;
			}
			.trust-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 60px;
				height: 60px;
				background: var(--gradient-card);
				border-radius: 0 0 60px 0;
			}
			.trust-card:hover {
				border-color: var(--border-accent);
				transform: translateY(-2px);
			}
			.trust-icon {
				width: 40px;
				height: 40px;
				border-radius: var(--radius-md);
				background: var(--bg-tertiary);
				border: 1px solid var(--border-primary);
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: var(--space-md);
				font-size: 1.2rem;
				position: relative;
			}
			.trust-card h3 {
				font-size: var(--font-base);
				margin-bottom: 0.5rem;
			}
			.trust-card p {
				font-size: var(--font-sm);
				color: var(--text-tertiary);
				margin: 0;
				line-height: 1.6;
			}

			/* ===== FIELDS TABLE ===== */
			.fields-section {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-xl);
				padding: var(--space-2xl);
			}
			.fields-section h2 {
				margin-bottom: var(--space-lg);
			}

			/* ===== CTA ===== */
			.cta-section {
				padding: var(--space-3xl) 0 var(--space-xl);
			}
			.cta-card {
				background: var(--bg-card);
				border: 1px solid var(--border-accent);
				border-radius: var(--radius-xl);
				padding: var(--space-3xl);
				text-align: center;
				position: relative;
				overflow: hidden;
			}
			.cta-card::before {
				content: '';
				position: absolute;
				inset: 0;
				background: var(--gradient-card);
				pointer-events: none;
			}
			.cta-card h2 {
				position: relative;
				margin-bottom: var(--space-sm);
			}
			.cta-card p {
				position: relative;
				color: var(--text-secondary);
				margin-bottom: var(--space-xl);
				max-width: 480px;
				margin-left: auto;
				margin-right: auto;
			}
			.cta-card .btn {
				position: relative;
			}

			/* ===== RESPONSIVE ===== */
			@media (max-width: 960px) {
				.hero-content {
					grid-template-columns: 1fr;
					gap: var(--space-2xl);
				}
				.hero-title {
					font-size: clamp(1.75rem, 5vw, 2.5rem);
				}
				.hero-desc {
					font-size: var(--font-base);
				}
				.post-grid {
					grid-template-columns: repeat(2, 1fr);
					gap: var(--space-md);
				}
				.trust-grid {
					grid-template-columns: 1fr;
				}
				/* How It Works - 2 columns on tablet */
				.trust-grid.how-it-works {
					grid-template-columns: repeat(2, 1fr);
				}
				.stats-strip {
					grid-template-columns: repeat(2, 1fr);
				}
				.leaderboard-footer {
					flex-direction: column;
					gap: var(--space-xs);
					text-align: center;
				}
			}
			@media (max-width: 600px) {
				.hero-section {
					padding: var(--space-xl) 0;
				}
				.hero-title {
					font-size: 1.5rem;
				}
				.hero-badges {
					flex-wrap: wrap;
				}
				.hero-actions {
					flex-direction: column;
				}
				.hero-actions .btn {
					width: 100%;
					justify-content: center;
				}
				.post-grid {
					grid-template-columns: 1fr;
				}
				.stats-strip {
					grid-template-columns: 1fr 1fr;
					gap: var(--space-sm);
				}
				.stat-card {
					padding: var(--space-md);
				}
				.stat-number {
					font-size: var(--font-2xl);
				}
				.section {
					padding: var(--space-xl) 0;
				}
				.section-header {
					margin-bottom: var(--space-md);
				}
				.trust-card {
					padding: var(--space-lg);
				}
				/* How It Works - 1 column on mobile */
				.trust-grid.how-it-works {
					grid-template-columns: 1fr;
				}
				.fields-section {
					padding: var(--space-lg);
				}
				.cta-card {
					padding: var(--space-xl);
				}
				.cta-card h2 {
					font-size: var(--font-xl);
				}
			}
		</style>
	</head>
	<body>
		<Header />

		<!-- Hero -->
		<section class="hero-section">
			<div class="hero-bg"></div>
			<div class="hero-mesh"></div>
			<div class="hero-grid-lines"></div>
			<div class="hero-content container">
				<div class="hero-text">
					<span class="hero-eyebrow">
						<span class="dot"></span>
						Updated daily at 6am ET
					</span>
					<h1 class="hero-title">Pick the right AI model with real-world benchmarks.</h1>
					<p class="hero-desc">
						We run actual engineering tasks — bug fixes, architecture decisions, API integrations — and score every model on <strong>correctness</strong>, <strong>cost</strong>, <strong>latency</strong>, and <strong>reliability</strong>. No synthetic benchmarks. No marketing claims. Just reproducible evals.
					</p>
					<div class="hero-badges">
						<span class="badge badge-accent">Daily scorecards</span>
						<span class="badge">Transparent rubrics</span>
						<span class="badge">Failure cases included</span>
						<span class="badge badge-success">Cost + latency tracked</span>
					</div>
					<div class="hero-actions">
						<a class="btn btn-primary" href="/scorecards">
							See today's scorecards
							<span class="btn-arrow">&rarr;</span>
						</a>
						<a class="btn btn-secondary" href="/about">Our methodology</a>
					</div>
				</div>

				<div class="hero-visual">
					<div class="leaderboard-card">
						<div class="leaderboard-header">
							<h3>Today's Leaderboard</h3>
							<span>Feb 13, 2026</span>
						</div>
						{models.map((model, i) => (
							<div class="model-row">
								<div class:list={['model-rank', { gold: i === 0 }]}>
									{i + 1}
								</div>
								<div class="model-info">
									<span class="model-name">{model.name}</span>
									<div class="model-bar-container">
										<div
											class="model-bar"
											style={`width: ${(model.total / 10) * 100}%; background: ${model.color};`}
										></div>
									</div>
								</div>
								<div class="model-score">{model.total.toFixed(1)}</div>
							</div>
						))}
						<div class="leaderboard-footer">
							<a href="/scorecards">View full scorecards &rarr;</a>
							<span>Coding 40% / Reasoning 35% / Tool-use 25%</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<main>
			<!-- Stats strip -->
			<section class="section">
				<div class="container">
					<div class="stats-strip">
						<div class="stat-card">
							<div class="stat-number">6+</div>
							<div class="stat-label">Models tested daily</div>
						</div>
						<div class="stat-card">
							<div class="stat-number">17</div>
							<div class="stat-label">Published scorecards</div>
						</div>
						<div class="stat-card">
							<div class="stat-number">100%</div>
							<div class="stat-label">Transparent rubrics</div>
						</div>
						<div class="stat-card">
							<div class="stat-number">Daily</div>
							<div class="stat-label">Updated at 6am ET</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Recent scorecards -->
			<section class="section">
				<div class="container">
					<div class="section-header">
						<h2>Recent Scorecards</h2>
						<p>Latest model evaluations across coding, reasoning, and tool-use tasks.</p>
					</div>
					<div class="post-grid">
						{recent.map((post) => (
							<a class="post-card" href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									<div class="post-card-image">
										<Image width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
									</div>
								)}
								<div class="post-card-body">
									<span class="post-card-date"><FormattedDate date={post.data.pubDate} /></span>
									<h3 class="post-card-title">{post.data.title}</h3>
								</div>
							</a>
						))}
					</div>
				</div>
			</section>

			<!-- Why engineers trust this -->
			<section class="section">
				<div class="container">
					<div class="section-header">
						<h2>Why Engineers Trust This</h2>
						<p>Built for teams choosing AI models for production workloads.</p>
					</div>
					<div class="trust-grid">
						<div class="trust-card">
							<div class="trust-icon">&#9881;</div>
							<h3>Real engineering tasks</h3>
							<p>Bug fixes, build-vs-buy decisions, docs-driven workflows. No synthetic toy problems.</p>
						</div>
						<div class="trust-card">
							<div class="trust-icon">&#128270;</div>
							<h3>Rubrics you can audit</h3>
							<p>Every eval includes the exact prompt, scoring criteria, and failure cases. Fully reproducible.</p>
						</div>
