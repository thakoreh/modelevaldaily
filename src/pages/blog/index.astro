---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const featured = posts[0];
const remaining = posts.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`AI Model Evaluations & Benchmark Results | ${SITE_TITLE}`}
			description="Read daily AI model evaluations across coding, reasoning, and tool-use benchmarks. In-depth analysis of Claude, GPT, and other leading models."
		/>
		<style>
			.page-hero {
				position: relative;
				max-width: var(--container-xl);
				margin: 0 auto;
				padding: var(--space-3xl) 1.5rem var(--space-xl);
			}
			.page-hero h1 {
				font-size: clamp(2rem, 3.5vw, 2.75rem);
				margin-bottom: 0.35rem;
			}
			.page-hero p {
				color: var(--text-secondary);
				font-size: var(--font-lg);
				margin-bottom: var(--space-sm);
			}
			.page-hero nav {
				font-size: var(--font-sm);
			}

			/* Featured post */
			.featured {
				max-width: var(--container-xl);
				margin: 0 auto var(--space-2xl);
				padding: 0 1.5rem;
			}
			.featured-card {
				display: grid;
				grid-template-columns: 1.2fr 0.8fr;
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-xl);
				overflow: hidden;
				text-decoration: none;
				color: inherit;
				transition: all var(--transition-base);
			}
			.featured-card:hover {
				border-color: var(--border-accent);
				transform: translateY(-3px);
				box-shadow: var(--shadow-lg);
			}
			.featured-card-image {
				overflow: hidden;
			}
			.featured-card-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 0;
				transition: transform var(--transition-slow);
			}
			.featured-card:hover .featured-card-image img {
				transform: scale(1.03);
			}
			.featured-card-body {
				padding: var(--space-2xl);
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			.featured-label {
				display: inline-block;
				font-size: var(--font-xs);
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.06em;
				color: var(--accent-light);
				margin-bottom: var(--space-sm);
			}
			.featured-card-body h2 {
				font-size: var(--font-2xl);
				margin-bottom: 0.5rem;
				transition: color var(--transition-fast);
			}
			.featured-card:hover h2 {
				color: var(--accent-light);
			}
			.featured-card-body .desc {
				color: var(--text-tertiary);
				font-size: var(--font-sm);
				margin-bottom: var(--space-md);
				line-height: 1.6;
			}
			.featured-card-body .date {
				font-size: var(--font-xs);
				color: var(--text-tertiary);
			}

			/* Grid */
			.posts-section {
				max-width: var(--container-xl);
				margin: 0 auto;
				padding: 0 1.5rem var(--space-3xl);
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: var(--space-lg);
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.post-card {
				background: var(--bg-card);
				border: 1px solid var(--border-primary);
				border-radius: var(--radius-lg);
				overflow: hidden;
				transition: all var(--transition-base);
			}
			.post-card:hover {
				border-color: var(--border-accent);
				transform: translateY(-4px);
				box-shadow: var(--shadow-md);
			}
			.post-card a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			.post-card-image {
				aspect-ratio: 16/9;
				overflow: hidden;
			}
			.post-card-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 0;
				transition: transform var(--transition-slow);
			}
			.post-card:hover .post-card-image img {
				transform: scale(1.05);
			}
			.post-card-body {
				padding: var(--space-lg);
			}
			.post-card-body h3 {
				font-size: var(--font-base);
				color: var(--text-primary);
				margin: 0 0 0.35rem;
				line-height: 1.35;
				transition: color var(--transition-fast);
			}
			.post-card:hover h3 {
				color: var(--accent-light);
			}
			.post-card-body .date {
				font-size: var(--font-xs);
				color: var(--text-tertiary);
			}

			@media (max-width: 960px) {
				.featured-card {
					grid-template-columns: 1fr;
				}
				.posts-grid {
					grid-template-columns: repeat(2, 1fr);
				}
			}
			@media (max-width: 600px) {
				.posts-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />

		<div class="page-hero">
			<h1>Latest Evaluations</h1>
			<p>Daily model benchmarks across coding, reasoning, and real-world tasks.</p>
			<nav><a href="/scorecards">Browse scorecards &rarr;</a></nav>
		</div>

		{featured && (
			<div class="featured">
				<a class="featured-card" href={`/blog/${featured.id}/`}>
					{featured.data.heroImage && (
						<div class="featured-card-image">
							<Image width={720} height={400} src={featured.data.heroImage} alt={featured.data.title} />
						</div>
					)}
					<div class="featured-card-body">
						<span class="featured-label">Latest</span>
						<h2>{featured.data.title}</h2>
						<p class="desc">{featured.data.description}</p>
						<span class="date"><FormattedDate date={featured.data.pubDate} /></span>
					</div>
				</a>
			</div>
		)}

		<div class="posts-section">
			<ul class="posts-grid">
				{remaining.map((post) => (
					<li class="post-card">
						<a href={`/blog/${post.id}/`}>
							{post.data.heroImage && (
								<div class="post-card-image">
									<Image width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
								</div>
							)}
							<div class="post-card-body">
								<h3>{post.data.title}</h3>
								<span class="date"><FormattedDate date={post.data.pubDate} /></span>
							</div>
						</a>
					</li>
				))}
			</ul>
		</div>

		<Footer />
	</body>
</html>
