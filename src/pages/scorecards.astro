---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts[0];
const highlights = posts.slice(1, 5);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} | Scorecards`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 1040px;
			}
			.hero {
				display: grid;
				grid-template-columns: 1.2fr 0.8fr;
				gap: 1.5rem;
				margin-bottom: 2rem;
			}
			.hero-card {
				background: var(--surface);
				border-radius: 16px;
				padding: 1.5rem;
				box-shadow: var(--box-shadow);
				border: 1px solid rgba(var(--border), 0.7);
			}
			.hero p {
				color: rgb(var(--text-muted));
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			.card {
				background: var(--surface);
				border: 1px solid rgba(var(--border), 0.7);
				padding: 1rem;
				border-radius: 12px;
			}
			.title {
				margin: 0 0 0.25rem 0;
				color: rgb(var(--text));
				line-height: 1.2;
				font-size: 1.25rem;
			}
			.date {
				margin: 0;
				color: rgb(var(--text-muted));
			}
			.card img {
				border-radius: 12px;
				margin-bottom: 0.75rem;
			}
			.card a {
				display: block;
				text-decoration: none;
			}
			.card a:hover h4,
			.card a:hover .date {
				color: var(--accent);
			}
			@media (max-width: 960px) {
				.hero {
					grid-template-columns: 1fr;
				}
				.grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div>
					<h1>Daily AI model scorecards</h1>
					<p>Browse today’s winner, task leaders, and latency/cost tradeoffs.</p>
					<p><strong>Updated daily at 6am ET.</strong></p>
				</div>
				{latest && (
					<div class="hero-card">
						<h3>Today’s scorecard</h3>
						<a href={`/blog/${latest.id}/`}>
							{latest.data.heroImage && (
								<Image width={720} height={360} src={latest.data.heroImage} alt="" />
							)}
							<h4 class="title">{latest.data.title}</h4>
							<p class="date">
								<FormattedDate date={latest.data.pubDate} />
							</p>
						</a>
					</div>
				)}
			</section>

			<section>
				<h2>Recent scorecards</h2>
				{highlights.length === 0 ? (
					<p>No past scorecards yet. Check back tomorrow.</p>
				) : (
					<ul class="grid">
						{highlights.map((post) => (
							<li class="card">
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))}
					</ul>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
