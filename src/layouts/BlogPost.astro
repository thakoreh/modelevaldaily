---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

const pageTitle = title.includes('AIModelBenchmarks.com')
	? title
	: `${title} | AIModelBenchmarks.com`;
---

<html lang="en">
	<head>
		<BaseHead
			title={pageTitle}
			description={description}
			type="article"
			publishDate={pubDate}
			modifiedDate={updatedDate}
		/>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				max-width: var(--container-xl);
				margin: var(--space-lg) auto 0;
				padding: 0 1.5rem;
			}
			.hero-image img {
				display: block;
				width: 100%;
				border-radius: var(--radius-xl);
				border: 1px solid var(--border-primary);
				box-shadow: var(--shadow-lg);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: var(--space-md);
				color: var(--text-secondary);
			}
			.title-block {
				margin-bottom: var(--space-2xl);
				padding: var(--space-xl) 0;
				text-align: center;
			}
			.title-block h1 {
				font-size: clamp(1.75rem, 3vw, 2.5rem);
				margin: 0 0 var(--space-md) 0;
				background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.date-line {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: var(--space-sm);
				flex-wrap: wrap;
				font-size: var(--font-sm);
				color: var(--text-tertiary);
				margin-bottom: var(--space-md);
			}
			.updated-badge {
				display: inline-flex;
				align-items: center;
				gap: 0.3rem;
				padding: 0.2rem 0.6rem;
				border-radius: var(--radius-full);
				background: rgba(34, 197, 94, 0.1);
				color: var(--success);
				font-size: var(--font-xs);
				font-weight: 600;
			}
			.divider {
				border: none;
				border-top: 1px solid var(--border-primary);
				margin: 0;
			}
			/* Back link */
			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.35rem;
				max-width: var(--container-xl);
				margin: var(--space-xl) auto 0;
				padding: 0 1.5rem;
				font-size: var(--font-sm);
				color: var(--text-tertiary);
				text-decoration: none;
			}
			.back-link:hover {
				color: var(--accent-light);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<a class="back-link" href="/blog">&larr; Back to all evals</a>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt={title} />}
				</div>
				<div class="prose">
					<div class="title-block">
						<div class="date-line">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<span class="updated-badge">Updated <FormattedDate date={updatedDate} /></span>
							)}
						</div>
						<h1>{title}</h1>
						<hr class="divider" />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
