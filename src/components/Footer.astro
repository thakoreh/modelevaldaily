---
const today = new Date();
const categories = [
	{ name: 'Coding Evals', href: '/scorecards#coding' },
	{ name: 'Reasoning Evals', href: '/scorecards#reasoning' },
	{ name: 'Tool-use Evals', href: '/scorecards#tool-use' },
	{ name: 'Agent Evals', href: '/scorecards#agents' },
];
const resources = [
	{ name: 'All Scorecards', href: '/scorecards' },
	{ name: 'Latest Evals', href: '/blog' },
	{ name: 'Methodology', href: '/about' },
	{ name: 'FAQ', href: '/faq' },
	{ name: 'RSS Feed', href: '/rss.xml' },
];
const models = [
	'Claude Opus 4.6',
	'5.3-Codex-Spark',
	'Kimi K2.5',
	'MiniMax M2.5',
	'GLM-5',
	'Gemini 2.5 Pro',
];
---

<footer>
	<div class="footer-inner">
		<div class="footer-top">
			<div class="footer-brand">
				<a href="/" class="footer-logo">
					<svg width="24" height="24" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect width="28" height="28" rx="7" fill="url(#footer-logo-grad)"/>
						<path d="M7 18L11 10L15 16L19 8L21 12" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						<defs>
							<linearGradient id="footer-logo-grad" x1="0" y1="0" x2="28" y2="28">
								<stop stop-color="#6366f1"/>
								<stop offset="1" stop-color="#a855f7"/>
							</linearGradient>
						</defs>
					</svg>
					<span>AIModelBenchmarks.com</span>
				</a>
				<p class="footer-tagline">Operator-grade AI model scorecards. Daily benchmarks across coding, reasoning, and real-world tasks.</p>
				<div class="footer-social">
					<a href="https://x.com/aimodelbench" target="_blank" rel="noopener noreferrer" aria-label="Follow on X (Twitter)">
						<svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
					</a>
					<a href="/rss.xml" aria-label="RSS Feed">
						<svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795 0 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-8.18v4.819c12.951.115 23.424 10.563 23.547 23.501h4.813c-.123-15.618-12.747-28.218-28.36-28.32z"/></svg>
					</a>
				</div>
			</div>
			<div class="footer-col">
				<h4>Eval Categories</h4>
				<ul>
					{categories.map(cat => (
						<li><a href={cat.href}>{cat.name}</a></li>
					))}
				</ul>
			</div>
			<div class="footer-col">
				<h4>Resources</h4>
				<ul>
					{resources.map(res => (
						<li><a href={res.href}>{res.name}</a></li>
					))}
				</ul>
			</div>
			<div class="footer-col">
				<h4>Models We Track</h4>
				<ul>
					{models.map(m => (
						<li><span class="model-name">{m}</span></li>
					))}
				</ul>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} AIModelBenchmarks.com</p>
			<p class="footer-disclaimer">All trademarks belong to their respective owners. Benchmarks are for informational purposes only.</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--bg-secondary);
		border-top: 1px solid var(--border-primary);
		margin-top: var(--space-3xl);
	}
	.footer-inner {
		max-width: var(--container-xl);
		margin: 0 auto;
		padding: var(--space-3xl) 1.5rem var(--space-xl);
	}
	.footer-top {
		display: grid;
		grid-template-columns: 1.4fr 1fr 1fr 1fr;
		gap: var(--space-2xl);
		padding-bottom: var(--space-2xl);
		border-bottom: 1px solid var(--border-primary);
	}

	/* Brand column */
	.footer-logo {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 700;
		font-size: var(--font-sm);
		color: var(--text-primary);
		text-decoration: none;
		margin-bottom: var(--space-sm);
	}
	.footer-logo:hover {
		color: var(--text-primary);
	}
	.footer-tagline {
		font-size: var(--font-sm);
		color: var(--text-tertiary);
		line-height: 1.6;
		margin: 0 0 var(--space-md);
		max-width: 280px;
	}
	.footer-social {
		display: flex;
		gap: 0.5rem;
	}
	.footer-social a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: var(--radius-sm);
		background: var(--bg-tertiary);
		color: var(--text-tertiary);
		border: 1px solid var(--border-primary);
		transition: all var(--transition-fast);
	}
	.footer-social a:hover {
		color: var(--text-primary);
		border-color: var(--border-accent);
		background: var(--bg-elevated);
	}

	/* Link columns */
	.footer-col h4 {
		font-size: var(--font-xs);
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--text-secondary);
		margin: 0 0 var(--space-md);
	}
	.footer-col ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.footer-col li {
		margin-bottom: 0.5rem;
	}
	.footer-col a {
		font-size: var(--font-sm);
		color: var(--text-tertiary);
		text-decoration: none;
		transition: color var(--transition-fast);
	}
	.footer-col a:hover {
		color: var(--accent-light);
	}
	.model-name {
		font-size: var(--font-sm);
		color: var(--text-tertiary);
	}

	/* Bottom bar */
	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: var(--space-lg);
		gap: var(--space-md);
		flex-wrap: wrap;
	}
	.footer-bottom p {
		font-size: var(--font-xs);
		color: var(--text-tertiary);
		margin: 0;
	}
	.footer-disclaimer {
		opacity: 0.7;
	}

	/* Mobile */
	@media (max-width: 960px) {
		.footer-top {
			grid-template-columns: 1fr 1fr;
			gap: var(--space-xl);
		}
		.footer-brand {
			grid-column: 1 / -1;
		}
	}
	@media (max-width: 600px) {
		.footer-top {
			grid-template-columns: 1fr;
			gap: var(--space-lg);
		}
		.footer-brand {
			grid-column: auto;
		}
		.footer-bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
