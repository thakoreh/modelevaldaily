---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="nav-left">
			<a href="/" class="logo">
				<span class="logo-icon">
					<svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect width="28" height="28" rx="7" fill="url(#logo-grad)"/>
						<path d="M7 18L11 10L15 16L19 8L21 12" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						<defs>
							<linearGradient id="logo-grad" x1="0" y1="0" x2="28" y2="28">
								<stop stop-color="#6366f1"/>
								<stop offset="1" stop-color="#a855f7"/>
							</linearGradient>
						</defs>
					</svg>
				</span>
				<span class="logo-text">{SITE_TITLE}</span>
			</a>
		</div>
		<div class="nav-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/compare">Compare</HeaderLink>
			<HeaderLink href="/scorecards">Scorecards</HeaderLink>
			<HeaderLink href="/blog">Evals</HeaderLink>
			<HeaderLink href="/about">Methodology</HeaderLink>
			<HeaderLink href="/faq">FAQ</HeaderLink>
		</div>
		<div class="nav-right">
			<a class="nav-cta" href="/scorecards">
				<span class="pulse-dot"></span>
				Live scores
			</a>
		</div>
	</nav>
	<!-- Mobile nav -->
	<button class="mobile-toggle" aria-label="Toggle navigation" id="mobile-nav-toggle">
		<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<line x1="3" y1="6" x2="21" y2="6"/>
			<line x1="3" y1="12" x2="21" y2="12"/>
			<line x1="3" y1="18" x2="21" y2="18"/>
		</svg>
	</button>
	<div class="mobile-menu" id="mobile-menu">
		<a href="/">Home</a>
		<a href="/compare">Compare</a>
		<a href="/scorecards">Scorecards</a>
		<a href="/blog">Evals</a>
		<a href="/about">Methodology</a>
		<a href="/faq">FAQ</a>
	</div>
</header>

<script>
	const toggle = document.getElementById('mobile-nav-toggle');
	const menu = document.getElementById('mobile-menu');
	toggle?.addEventListener('click', () => {
		menu?.classList.toggle('open');
	});
</script>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(10, 11, 15, 0.8);
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
		border-bottom: 1px solid var(--border-primary);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: var(--container-xl);
		margin: 0 auto;
		padding: 0.65rem 1.5rem;
		gap: 1rem;
	}

	/* Logo */
	.logo {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		color: var(--text-primary);
	}
	.logo:hover {
		color: var(--text-primary);
	}
	.logo-icon {
		display: flex;
		align-items: center;
	}
	.logo-text {
		font-size: var(--font-sm);
		font-weight: 700;
		letter-spacing: -0.01em;
		white-space: nowrap;
	}

	/* Nav center links */
	.nav-center {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}
	.nav-center :global(a) {
		padding: 0.4rem 0.75rem;
		color: var(--text-secondary);
		text-decoration: none;
		font-size: var(--font-sm);
		font-weight: 500;
		border-radius: var(--radius-sm);
		transition: all var(--transition-fast);
	}
	.nav-center :global(a:hover) {
		color: var(--text-primary);
		background: var(--bg-tertiary);
	}
	.nav-center :global(a.active) {
		color: var(--text-primary);
		background: var(--bg-tertiary);
	}

	/* Right section */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	.nav-cta {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.4rem 0.9rem;
		border-radius: var(--radius-full);
		background: var(--gradient-primary);
		background-size: 200% 200%;
		animation: gradientShift 3s ease infinite;
		color: white !important;
		font-size: var(--font-sm);
		font-weight: 600;
		text-decoration: none;
		transition: all var(--transition-fast);
		box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
	}
	.nav-cta:hover {
		transform: translateY(-1px);
		box-shadow: 0 0 30px rgba(99, 102, 241, 0.5);
		color: white;
	}
	.pulse-dot {
		width: 6px;
		height: 6px;
		border-radius: 50%;
		background: var(--success);
		animation: pulse 2s ease-in-out infinite;
	}


	/* Mobile */
	.mobile-toggle {
		display: none;
		position: absolute;
		right: 1rem;
		top: 50%;
		transform: translateY(-50%);
		background: none;
		border: none;
		color: var(--text-secondary);
		cursor: pointer;
		padding: 0.5rem;
	}
	.mobile-menu {
		display: none;
		flex-direction: column;
		padding: 0 1.5rem 1rem;
	}
	.mobile-menu a {
		display: block;
		padding: 0.65rem 0;
		color: var(--text-secondary);
		text-decoration: none;
		font-size: var(--font-sm);
		border-bottom: 1px solid var(--border-secondary);
	}
	.mobile-menu a:hover {
		color: var(--text-primary);
	}

	@media (max-width: 768px) {
		.nav-center {
			display: none;
		}
		.nav-cta {
			display: none;
		}
		.mobile-toggle {
			display: block;
		}
		.mobile-menu.open {
			display: flex;
		}
		nav {
			position: relative;
		}
	}
</style>
