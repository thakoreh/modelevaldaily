---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/scorecards">Scorecards</HeaderLink>
			<HeaderLink href="/blog">Evals</HeaderLink>
			<HeaderLink href="/about">Methodology</HeaderLink>
		</div>
		<div class="cta-links">
			<a class="cta-link" href="/scorecards">Latest scorecard</a>
			<a href="https://x.com" target="_blank">
				<span class="sr-only">Follow on X</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--surface);
		border-bottom: 1px solid rgba(var(--border), 0.7);
	}
	h2 {
		margin: 0;
		font-size: 1.1rem;
		font-weight: 700;
		letter-spacing: -0.01em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1040px;
		margin: 0 auto;
		padding: 0.5rem 1rem;
		gap: 1rem;
	}
	nav a {
		padding: 0.75rem 0.5em;
		color: rgb(var(--text));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-weight: 500;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--accent);
	}
	.cta-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	.cta-link {
		padding: 0.4rem 0.8rem;
		border-radius: 999px;
		background: var(--accent);
		color: white;
		font-weight: 600;
		text-decoration: none;
	}
	.cta-link:hover {
		color: white;
		background: var(--accent-dark);
	}
	@media (max-width: 900px) {
		.cta-link {
			display: none;
		}
	}
	@media (max-width: 720px) {
		.cta-links a:last-child {
			display: none;
		}
		.internal-links {
			display: none;
		}
	}
</style>
